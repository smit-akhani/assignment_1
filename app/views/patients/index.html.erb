<%= link_to :New, new_patient_path %>
<% if !@patients.empty? %>
    <table border="1">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td></td>
                <td></td>
            </tr>
        <thead>
        <tbody>
            <% @patients.each do |ele| %>
                <tr>
                    <td><%= ele.name %></td>
                    <td><%= ele.email %></td>
                    <td><%= link_to :Edit, edit_patient_path(ele.id) %></td>
                    <td><%= button_to :Delete, patient_path(ele.id),  method: :delete %></td>
                </tr>    
            <% end %>
        </tbody>
    </table>
<% end %>